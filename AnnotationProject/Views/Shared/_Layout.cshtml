    #headerText {
        font-weight: bold;
        font-family: Georgia;
        padding-top: 8px !important;
        margin-top: 0px;
        cursor: pointer;
        color:wheat;
    }

    #loginDiv {
        position: absolute;
        right: 3%;
        margin: 25px;
    }

    .tabSelected {
        font-weight: bold;
        color: #0193B7;
    }

    #tabMenu {
        text-align: center;
        background-color: white;
        align-content:center;
        align-items:center;
    }

