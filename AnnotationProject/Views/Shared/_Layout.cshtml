<script>
    var urlRoot = '@Url.Content("~/")';
</script>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <title>Digression Project - @ViewBag.Title</title>
    <link href="~/favicon.ico" rel="shortcut icon" type="image/x-icon" />
    <meta name="viewport" content="width=device-width" />
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
</head>
<body>
    @*#063E53*@
    @*#735D41*@
    @*#0193B7*@
    <header>
        <div class="row">
            <div class="col-md-3 col-xs-3"></div>
            <div style="text-align: center;" class="col-md-5 col-xs-5">
                <h1 id="headerText" onclick="window.location = urlRoot;">Digression Project</h1>
            </div>
            <div class="col-md-2 col-xs-2" style="margin-top: 8px;">@Html.Partial("_LoginPartial")</div>
        </div>
        <div id="tabMenu" class="row">
            <div class="col-md-12" style="text-align:center">
            @{ 
                var cont = ViewContext.RouteData.Values["controller"].ToString().ToLower();
            }
            @*@if (cont == "home") { 
                <div class="tabMenuItem col-md-2 col-xs-2 tabSelected" onclick="selectTab(this)">Home</div>
            } else { 
                <div class="tabMenuItem col-md-2 col-xs-2" onclick="selectTab(this)">Home</div>
            }*@
            @if (cont == "texts") { 
                <span class="tabMenuItem tabSelected" onclick="selectTab(this)">Texts</span>
            } else { 
                <span class="tabMenuItem " onclick="selectTab(this)">Texts</span>
            }
            @if (cont == "annotations") { 
                <span class="tabMenuItem  tabSelected" onclick="selectTab(this)">Annotations</span>    
            } else { 
                <span class="tabMenuItem " onclick="selectTab(this)">Annotations</span>
            }
            @if (@Request.IsAuthenticated) { 
            if (cont == "responses") { 
                <span class="tabMenuItem  tabSelected" onclick="selectTab(this)">Responses (0)</span>
            } else { 
                <span class="tabMenuItem " onclick="selectTab(this)">Responses (0)</span>                
            }
            }

            @if (cont == "upload") {
                <span class="tabMenuItem  tabSelected" onclick="selectTab(this)">Upload</span>
            } else { 
                <span class="tabMenuItem " onclick="selectTab(this)">Upload</span>
            }
                </div>
        </div>
    </header>
    <div id="body">
        @RenderSection("featured", required: false)
        <section class="content-wrapper main-content clear-fix">
            @RenderBody()
        </section>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @RenderSection("scripts", required: false)
</body>
</html>

<script src="~/Scripts/Controllers/NotificationController.js"></script>
<script>

    function clear() {
        $('.tabMenuItem').removeClass('tabSelected');
    }
    function selectTab(item) {
        clear();
        $(item).addClass('tabSelected');
        var c = $(item).html().split(' ')[0];
        window.location = urlRoot + c + '/index';
    }

</script>
