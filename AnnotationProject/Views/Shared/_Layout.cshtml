<script>
    var urlRoot = '@Url.Content("~/")';
</script>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <title>Digression Project - @ViewBag.Title</title>
    <link href="~/favicon.ico" rel="shortcut icon" type="image/x-icon" />
    <meta name="viewport" content="width=device-width" />
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
</head>
<body>
    @*#063E53*@
    @*#735D41*@
    @*#0193B7*@
    <header>
        <div ng-app>
            <div ng-controller="LayoutCtrl" ng-cloak>
                <div class="row" style="background-color:#0193B7;">
                    <div class="col-md-3 col-xs-3"></div>
                    <div style="text-align: center;" class="col-md-5 col-xs-5">
                        <h1 id="headerText" onclick="window.location = urlRoot;" >Digression Project</h1>
                    </div>
                    <div class="col-md-2 col-xs-2" style="margin-top: 8px;">@Html.Partial("_LoginPartial")</div>
                </div>

                @{ 
                        var cont = ViewContext.RouteData.Values["controller"].ToString().ToLower();
                        if (cont == "user" && string.Concat(Request.Url.Query.Skip(6)) == User.Identity.Name) {
                            cont = "profile";
                        }
                }
                <div id="tabMenu" class="row">
                    <div class="col-md-12" style="text-align: center">
                        <span ng-repeat="h in headerItems" class="tabMenuItem" ng-class="{ tabSelected: h.toLowerCase() == '@cont'}" onclick="selectTab(this, '@User.Identity.Name')">
                            {{h}}
                        </span>
                    </div>
                </div>
        </div>
    </header>
    <div id="body">
        @RenderSection("featured", required: false)
        <section class="content-wrapper main-content clear-fix">
            @RenderBody()
        </section>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @RenderSection("scripts", required: false)
</body>
</html>

<script src="~/Scripts/Controllers/NotificationController.js"></script>
<script src="~/Scripts/Controllers/LayoutController.js"></script>

<script>
    function trim (str) {
        return str.replace(/^\s\s*/, '').replace(/\s\s*$/, '');
    }

    function selectTab(item, name) {
        var c = trim($(item).html());
        var url;
        if (c == "Profile") {
            url = urlRoot + 'User?user=' + name;
        } else {
            url = urlRoot + c + '/index';
        }
        if (window.event.ctrlKey) {
            OpenInNewTab(url);
        } else {
            window.location = url;
        }
    }

    function OpenInNewTab(url) {
        var win = window.open(url, '_blank');
        win.focus();
    }

</script>