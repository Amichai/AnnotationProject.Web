<link href="~/Content/bootstrap.css" rel="stylesheet" />

<html ng-app>
<body>
    <div ng-controller="UploadTextCtrl">
        <div class="col-md-6">
            <h1>Search</h1>
            <div>
                <input type="text" ng-model="searchQuery" />
                <button type="button" data-loading-text="Loading..." class="btn btn-primary" style="margin: 20px" ng-click="search()">
                    Search
                </button>
            </div>
        </div>

        <div class="col-md-6">
            <h1>Upload</h1>
            <table>
                <tr>
                    <td>Author:</td>
                    <td>
                        <input type="text" ng-model="author" />
                    </td>
                </tr>
                <tr>
                    <td>Title:</td>
                    <td>
                        <input type="text" ng-model="title" />
                    </td>
                </tr>
                <tr>
                    <td>Description:</td>
                    <td>
                        <input type="text" ng-model="description" />
                    </td>
                </tr>
                <tr>
                    <td>Content:</td>
                    <td>
                        <textarea ng-model="text"></textarea>

                    </td>
                </tr>
            </table>
            <button type="button" data-loading-text="Loading..." class="btn btn-primary" style="margin: 20px" ng-click="upload()">
                Upload
            </button>
        </div>

        <div class="col-md-12">
            <h1>Results</h1>
            <table>
                <tr ng-show="results.length > 0">
                    <th>Title</th>
                    <th>Author</th>
                    <th>Description</th>
                    <th></th>
                </tr>
                <tr ng-repeat="result in results">
                    <td style="width: 25%"><a href="~/TextView/Index?textID={{result.ID}}">{{result.Title}}</a></td>
                    <td style="width: 20%">{{result.Author}}</td>
                    <td style="width: 20%">{{result.Description}}</td>
                    <td style="width: 35%">{{result.Snippet}}...</td>
                </tr>
            </table>
        </div>
    </div>
</body>
</html>
<script src="~/Scripts/jquery-1.9.1.js"></script>
<script src="~/Scripts/bootstrap.js"></script>
<script src="~/Scripts/angular.js"></script>
<script src="~/Scripts/Controllers/UploadTextController.js"></script>
